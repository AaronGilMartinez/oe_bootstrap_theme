{#
/**
 * @file
 * Card component.
 */
#}
{% if title is iterable and '#items' in title|keys %}
  {% set title = {
    content: title,
    class: 'mb-4'
  } %}
{% endif %}

{% if text is iterable and '#items' in text|keys %}
  {% set text = {
    content: text,
    class: 'mb-4'
  } %}
{% endif %}

{% if image is iterable and '#items' in image|keys %}
  {% set image = {
    path: image
  } %}
{% endif %}

{% include '@oe-bcl/bcl-card/card.html.twig' with {
  'title': title,
  'subtitle': subtitle,
  'text': text,
  'content': content,
  'image': image,
  'horizontal': horizontal,
  'horizontal_grid': horizontal_grid,
  'variant': variant,
  'border_variant': border_variant,
  'text_color': text_color,
  'card_header': card_header,
  'card_footer': card_footer,
  'extra_classes_body': extra_classes_body,
  'extra_classes_header': extra_classes_header,
  'extra_classes_footer': extra_classes_footer,
  'badges': badges,
} %}
