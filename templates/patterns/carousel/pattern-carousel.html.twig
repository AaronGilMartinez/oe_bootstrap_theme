{#
/**
 * @file
 * Carousel pattern.
 */
#}
{% set _items = [] %}
{% for slide in items %}
  {% set _image %}
    {% block image %}
      <img{{ create_attribute(slide.image).addClass(['d-block', 'w-100']) }} />
    {% endblock %}
  {% endset %}
  {% set _item = slide|merge({
    'image': _image
  }) %}
  {% set _items = _items|merge([_item]) %}
{% endfor %}
{% include '@oe-bcl/carousel' with {
  'id': carousel_id,
  'items': _items,
  'prev_label': 'Previous'|t,
  'next_label': 'Next'|t,
  'attributes': attributes,
} only %}
