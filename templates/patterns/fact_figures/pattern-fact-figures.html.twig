{% set _items = [] %}
{% for item in items %}
  {% if item.icon is not iterable %}
    {% set item = item|merge({
        'icon': {
          'name': item.icon,
        }
      }) %}
  {% endif %}
  {% set _items = _items|merge([item]) %}
{% endfor %}

{% include '@oe-bcl/bcl-fact-figures/fact-figures.html.twig' with {
  'title': title,
  'items': _items,
  'responsive_columns': columns,
  'equal_height': true,
  'icons_path': bcl_icon_path,
  'link_more': link,
  'attributes': attributes,
} only %}
