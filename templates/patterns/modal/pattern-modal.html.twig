{#
/**
 * @file
 * Modal component.
 */
#}

{% block trigger %}
  {{ pattern('button', {
    label: btn_label,
    style: btn_style,
    outline: btn_outline,
    size: btn_size,
    attributes: create_attribute({
      'data-bs-toggle': 'modal',
      'data-bs-target': '#' ~ id
    })
  }) }}
{% endblock %}

{% include '@oe-bcl/bcl-modal/modal.html.twig' with {
  'size': size,
  'id': id,
  'header': header,
  'body': body,
  'footer': footer
} %}