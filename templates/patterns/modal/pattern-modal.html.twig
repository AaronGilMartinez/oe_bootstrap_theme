{# Parameters:
  - size (sm, lg, xl, fullscreen)
  - id
  - header (block)
  - body (block)
  - footer (block)
#}

{% block trigger %}
  {{ pattern('button', {
    label: btn_label,
    style: btn_style,
    outline: btn_outline,
    size: btn_size,
    attributes: create_attribute({
      'data-bs-toggle': 'modal',
      'data-bs-target': btn_target
    })
  }) }}
{% endblock %}

{% include '@oe-bcl/bcl-modal/modal.html.twig' with {
  'size': size,
  'id': id,
  'header': header,
  'body': body,
  'footer': footer
} %}