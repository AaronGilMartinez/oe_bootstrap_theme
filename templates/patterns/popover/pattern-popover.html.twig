{#
/**
 * @file
 * Popover component.
 */
#}
{% set attributes = create_attribute({
  'data-bs-toggle': 'popover',
  'autocomplete': 'off',
  'aria-expanded': 'false',
  'data-bs-trigger': 'focus',
  'data-bs-content': content,
}) %}

{% if placement is defined %}
  {% set attributes = attributes.setAttribute('data-bs-placement', placement) %}
{% endif %}

{% if title is defined %}
  {% set attributes = attributes.setAttribute('title', title) %}
  {% set attributes = attributes.setAttribute('data-bs-original-title', title) %}
{% endif %}

{{ pattern('button', {
  label: label,
  variant: variant,
  outline: outline,
  size: size,
  attributes: attributes
 }) }}
