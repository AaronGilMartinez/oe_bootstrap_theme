{#
/**
 * @file
 * Button component.
 */
#}
{%  if variant == "secondary" %}
  {% set _icon = icon|merge({
    path: bcl_icon_path
})  %}
{% endif %}
{%  if variant == "warning" %}
  {% set show_spinner = true %}
  {% set spinner = {
    'type': "border",
    'variant': "info",
    'small': true,
  } %}
{% endif %}
{% include '@oe-bcl/bcl-button/button.html.twig' with {
  'label': label,
  'variant': variant,
  'size': size,
  'type': type,
  'outline': outline,
  'disabled': disabled,
  'text_nowrap': text_nowrap,
  'assistive_text': assistive_text,
  'id': button_id,
  'icon': _icon,
  'icon_position': icon_position,
  'clean_class': clean_class,
  'spinner': spinner,
  'show_spinner': show_spinner
} %}
