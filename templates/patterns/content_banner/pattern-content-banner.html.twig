{#
/**
 * @file
 * Content banner pattern.
 */
#}
{% set _content %}
  {% if creation_date is not empty %}
    <div class="mb-4 mt-4">
      <span class="text-muted me-3"> {{ creation_date }} </span>
    </div>
  {% endif %}
  <p> {{ content }} </p>
{% endset %}

{% set _image = {
  'path': image.src,
  'alt': image.alt,
} %}

{% set _badges = [] %}
{% for _badge in badges %}
  {% set _badge = _badge|merge({
    'outline': true,
  }) %}
  {% set _badges = _badges|merge([_badge]) %}
{% endfor %}
{% set _background = background == 'gray' ? 'gray' : 'white' %}

{% include '@oe-bcl/bcl-content-banner/bcl-content-banner.html.twig' with {
  'background': _background,
  'title': {
    'content': title,
  },
  'content': _content,
  'image': _image,
  'badges': _badges,
  'attributes': attributes,
} only %}
