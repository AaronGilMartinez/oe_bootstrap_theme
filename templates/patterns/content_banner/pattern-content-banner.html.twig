{#
/**
 * @file
 * Content banner pattern.
 */
#}
{% set _content %}
  {% if meta is not empty %}
    <div class="mb-4 mt-4">
  {% endif %}
  {% for _meta in meta %}
    <span class="text-muted me-3">{{ _meta }}</span>
  {% endfor %}
  {% if meta is not empty %}
    </div>
  {% endif %}
  <div>{{ content }}</div>
{% endset %}

{% set _badges = [] %}
{% for _badge in badges %}
  {% set _badge = _badge|merge({
    'outline': true,
  }) %}
  {% set _badges = _badges|merge([_badge]) %}
{% endfor %}
{% if image %}
  {% set _image = {
    'path': image.src,
    'alt': image.alt,
  }
  %}
{% endif %}
{% include '@oe-bcl/bcl-content-banner/bcl-content-banner.html.twig' with {
  'background': background,
  'title': {
    'content': title,
  },
  'content': _content,
  'image': _image,
  'badges': _badges,
  'attributes': attributes,
} only %}
