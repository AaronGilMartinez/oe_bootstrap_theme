/**
 * @file
 * Content banner pattern.
 */
#}
{% set _content %}
  {% if date is not empty %}
    <div class="mb-4 mt-4">
      <span class="text-muted me-3">{{ date }}</span>
    </div>
  {% endif %}
  <p>{{ content }}</p>
{% endset %}

{% set _badges = [] %}
{% for _badge in badges %}
  {% set _badge = _badge|merge({
    'outline': true,
  }) %}
  {% set _badges = _badges|merge([_badge]) %}
{% endfor %}

{% include '@oe-bcl/bcl-content-banner/bcl-content-banner.html.twig' with {
  'background': background,
  'title': {
    'content': title,
  },
  'content': _content,
ยบ  'image': {
    'path': image['#uri'],
    'alt': image['#alt'],
  },
  'badges': _badges,
  'attributes': attributes,
} only %}
