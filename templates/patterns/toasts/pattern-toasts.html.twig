{% set header %}
  <strong class="me-auto">
    {{ title }}
  </strong>
  <small class="text-muted">
    {{ time|bcl_timeago }}
  </small>
{% endset %}
{% include '@oe-bcl/bcl-toast/bcl-toasts.html.twig' with {
  'with_wrapper': wrapper,
  'toasts': [{
    'body': body,
    'role': role,
    'with_close': close_button,
    'header': header,
    'autohide': autohide,
    'attributes': create_attribute().addClass(['show']),
  }],
  'attributes': attributes,
} only %}
