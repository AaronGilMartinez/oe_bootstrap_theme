{#
/**
 * @file
 * Theme override to display the 'documents' type paragraph.
 *
 * @see ./modules/contrib/paragraphs/templates/paragraph.html.twig */
#}
{% if translations is not empty %}
  {% set _translations = translations|merge({
    id: 'language-dropdown',
    label: {
      label: 'Other languages (@num_translations)'|t({'@num_translations': num_translations}),
      icon_position: 'after',
      icon: {
        name: 'caret-down-fill',
        size: '2xs',
      },
    },
  }) %}
{% endif %}
{% set _file = file|merge({
  original_file_language_name: original_file_language_name,
}) %}
{{ pattern('file', {
  file: _file,
  translations: _translations,
  original_file_language_name: original_file_language_name,
}) }}
