{#
/**
 * @file
 * Template for a textarea form element.
 */
#}
{%
  set classes = [
    'form-control',
    attributes.hasClass('error') ? 'is-invalid',
  ]
%}
{% if attributes.placeholder %}
  {% set attributes = attributes.setAttribute('placeholder', 'text here'|t) %}
{% endif %}
<textarea{{ attributes.addClass(classes) }}>{{ value }}</textarea>
