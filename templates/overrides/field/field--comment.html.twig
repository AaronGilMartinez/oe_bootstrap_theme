{#
/**
 * @file
 * Template for the comment field.
 */
#}
<section{{ attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {{ comments }}

  {% if comment_form %}
    <div class="row">
      <div class="col-md-12">
        {{ pattern('card', {
          'variants': 'default',
          'header': 'Add new comment'|t,
          'body': comment_form
        }) }}
      </div>
    </div>
  {% endif %}

</section>
