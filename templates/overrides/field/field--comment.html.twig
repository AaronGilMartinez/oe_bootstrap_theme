{#
/**
 * @file
 * Template for the comment field.
 */
#}
<section{{ attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {{ comments }}

  {% if comment_form %}
    <div class="row">
      <div class="col-md-12">
        {{ pattern('card', {
          'variant': 'default',
          'style': 'default',
          'border_variant': border_variant,
          'card_header': 'Add new comment'|t,
          'content': comment_form,
          'text_color': 'dark'
        }) }}
      </div>
    </div>
  {% endif %}

</section>
