{#
/**
 * @file
 * Override for core 'pager' template, using the 'navigation' pattern.
 */
#}
{% block pager %}
{% if items %}
  {{ pattern('pagination', {
    'alignment': 'center',
    'prev': items.previous ? {
      'label': items.previous.text,
      'path': items.previous.href,
    },
    'items': items.pages|map((item, key) => {
      'label': key,
      'path': item.href,
      'active': key == current,
    }),
    'next': items.next ? {
      'label': items.next.text,
      'path': items.next.href,
    },
  }) }}
{% endif %}
{% endblock %}
