{#
/**
 * @file
 * Template for a mini pager.
 */
#}
{% if items %}
  {{ pattern('pagination', {
    alignment: 'center',
    prev: items.previous ? {
      'label': items.previous.text,
      'path': items.previous.href,
    },
    items: [{
      'label': items.current,
      'disabled': true,
    }],
    next: items.next ? {
      'label': items.next.text,
      'path': items.next.href,
    },
  }) }}
{% endif %}
