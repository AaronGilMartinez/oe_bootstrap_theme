{% set attributes = attributes.addClass([
  'badge',
  type == 'pill' ? 'rounded-pill',
  style ? 'bg-' ~ style,
  text_dark ? 'text-dark'
  ]) %}

{% if url or attributes.href %}
  {% set url = url ?: attributes.href %}
  <a {{ attributes.setAttribute('href', url) }}>{{ label }}</a>
{% else %}
  <span {{ attributes }}>{{ label }}</span>
{% endif %}
