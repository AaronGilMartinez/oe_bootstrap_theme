{% if variant != '' and variant|lower != 'left' %}
  {% set variants = variant|split('__') %}
  {% for variant in variants %}
    {% set attributes = attributes.addClass('text-' ~ variant|lower) %}
  {% endfor %}
{% endif %}

<figure{{ attributes }}>
  <blockquote class="blockquote">
    {{ content }}
    {% if footer %}
      <figcaption class="blockquote-footer">{{ footer }}</figcaption>
    {% endif %}
  </blockquote>
</figure>
