<div class="btn-group {{ directions }}">
  {% set attributes =  
  %}
  {{ pattern('button', {
    label: label,
    color: color,
    outline: outline,
    size: size,
    attributes: create_attribute({
      'class': 'dropdown-toggle',
      'data-toggle': 'dropdown',
      'aria-expanded': 'false'
    })
  }) }}
  <ul class="dropdown-menu">
    {% for item in items %}
      <li><a class="dropdown-item" href="{{ item.url }}">{{ item.title }}</a></li>
    {% endfor %}
  </ul>
</div>
